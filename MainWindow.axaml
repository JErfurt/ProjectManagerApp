<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ProjectManagerApp"
        xmlns:material="using:Material.Icons.Avalonia"
        mc:Ignorable="d"
        x:Class="ProjectManagerApp.MainWindow"
        x:DataType="vm:MainWindow"
        Width="1200" Height="600" Title="Project Manager">
    <DockPanel>
        <!-- Панель инструментов -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="10,10,10,0">
            <!-- Кнопка Открыть папку -->
            <Button Click="OpenConfigFolder" Content="{material:MaterialIconExt Kind=FolderOpen}" Width="32" Height="32" ToolTip.Tip="Открыть папку с конфигом" Margin="5"/>

            <!-- Кнопка Сохранить -->
            <Button Click="SaveProjects" Content="{material:MaterialIconExt Kind=ContentSave}" Width="32" Height="32" ToolTip.Tip="Сохранить" Margin="5"/>

            <!-- Кнопка Добавить строку -->
            <Button Click="AddProject" Content="+" Width="32" Height="32" ToolTip.Tip="Добавить строку" Margin="5"/>
        </StackPanel>


        <DataGrid Margin="20" ItemsSource="{Binding Projects}"
          AutoGenerateColumns="False" IsReadOnly="False"
          GridLinesVisibility="All" HeadersVisibility="All"
          BorderThickness="1" BorderBrush="Gray"
          SelectedItem="{Binding SelectedProject, Mode=TwoWay}" x:Name="Root">

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить строку" Command="{Binding RemoveProjectCommand}" CommandParameter="{Binding SelectedItem, ElementName=Root}" />
                </ContextMenu>
            </DataGrid.ContextMenu>

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Открыть папку">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Button Content="Открыть"
                                        Command="{x:Static vm:MainWindow.OpenFolderCommand}"
                                        CommandParameter="{Binding FolderPath}" />
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Новая колонка для запуска -->
                <DataGridTemplateColumn Header="Запуск">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Запустить"
                                    Command="{x:Static vm:MainWindow.RunBatchCommand}"
                                    CommandParameter="{Binding FolderPath}"
                                    Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="Название проекта" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Папка" Binding="{Binding FolderPath}" />
                
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
